
@{
    ViewBag.Title = "Chat";
}

@section head {

    @Styles.Render("~/Content/css/style")

    <style type="text/css">
        ul {
            margin: 0;
        }

            ul li {
                padding: 0;
                list-style-type: none;
            }

        #messages {
            margin-top: 10px;
        }

            #messages li {
                background-color: #EEE;
                -webkit-border-radius: 3px;
                -moz-border-radius: 3px;
                border-radius: 3px;
                min-height: 40px;
                line-height: 40px;
                padding-left: 7px;
                padding-right: 7px;
                margin-bottom: 1px;
            }

        #users li {
            border: 1px solid #EEE;
            padding: 4px;
            border-radius: 3px;
            margin-bottom: 1px;
            cursor: pointer;
        }

        .privateChatUser {
            background-color: #3A87AD;
        }
    </style>
}

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/apps/chat.js"></script>
}

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col col-md-8" style="display: inline-block;">
            <textarea id="txtMsg" style="border-color:black; border-width: 1px; margin-left: 45px; height: 50px; width: 560px;"></textarea>
            <button type="button" id="btnSend" class="btn" style=" width: 100px;">Send</button>
        </div>
    </div>

    <div class="row" style="display: inline;">
        <div class="col-md-8">
            <div id="messages">
                <ul id="messages" data-bind="foreach: messages" style="margin-top: -10px;">
                    <li style="color: black;">
                        <span class="label label-important" data-bind="visible: isPrivate" style="color: red;">Private</span>
                        <strong><span data-bind="text: from"></span>: </strong>
                        <span data-bind="text: message"></span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-4">
            <div id="users">
                <ul data-bind="foreach: users">
                    <li data-bind="click: setAsPrivateChat, css: { privateChatUser: isPrivateChatUser }" style="border-color: black; color: black;">
                        <span data-bind="text: name"></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
