@model ChHermes.Models.LoginViewModel
@{
    ViewBag.Title = "Hermes Chat - Login";
}

@Styles.Render("~/Content/css/style")
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("http://fonts.googleapis.com/css?family=Roboto:400,100,300,500")
@Styles.Render("~/Scripts/bootstrap.min.js")
@Styles.Render("~/Content/form-elements.css")
@Styles.Render("~/Content/Site.css")
@Styles.Render("~/Content/font-awesome.min.css")

<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-5">
                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Chat login</h3>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-user-cirle-o"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <form role="form" action="" method="post" class="login-form">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">@Html.LabelFor(m => m.UserName)</label>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username..." })
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger", @style="color: white;" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password..." })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @style = "color: white;" })
                                    </div>

                                    <div class="form-group">
                                        <button class="btn" type="submit">Login</button>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn">@Html.ActionLink("Register", "Register",null, new { @style = "color: white;"})</button>
                                    </div>
                                    <div class="form-group">
                                        <a>@Html.ActionLink("Forgot your password?", "ForgotPassword",null, new { @style = "color: white; margin-left: 30%;" })</a>
                                    </div>
                                }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}