@{
    ViewBag.Title = "HermesChat - Login";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @Styles.Render("http://fonts.googleapis.com/css?family=Roboto:400,100,300,500")
    @Styles.Render("~/Scripts/bootstrap.min.js")
    @Styles.Render("~/Content/form-elements.css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/font-awesome.min.css")

    <style>
        body {
            background-image: url(../../Content/img/1.png);
        }
    </style>
</head>

<body>

    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-5">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Chat login</h3>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-user-cirle-o"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                <form role="form" action="" method="post" class="login-form">
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Username</label>
                                        <input type="text" name="form-username" placeholder="Username..." class="form-username form-control" id="form-username">
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Password</label>
                                        <input type="password" name="form-password" placeholder="Password..." class="form-password form-control" id="form-password">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn">Sign in</button>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn">@Html.ActionLink("Register", "Register", "Account", null, new { @style = "color: white;" })</button>
                                    </div>
                                    <div class="form-group">
                                        <a>@Html.ActionLink("Forgot your password?", "Reset", "Account", new { @style = "color: white; margin-left: 30%;" })</a>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="social-login">
                            <h3 style="color: black;">...or login with:</h3>
                            <div class="social-login-buttons">
                                <a class="btn btn-link-2" href="#">
                                    <i class="fa fa-facebook"></i> Facebook
                                </a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>

    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/jquery.backstretch.min.js")

</body>

</html>